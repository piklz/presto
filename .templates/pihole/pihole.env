# Pi-hole v6 Environment Variables - Converted from v5 -piklz

# Timezone - remains the same.
TZ=Europe/London

# Web interface password. This replaces WEBPASSWORD.
FTLCONF_webserver_api_password=pihole

# Upstream DNS servers. This replaces PIHOLE_DNS, DNS1, and DNS2.
# Separate multiple IPs with a semicolon.
FTLCONF_dns_upstream_servers=8.8.8.8;8.8.4.4

# Enable DNSSEC. This replaces DNSSEC.
FTLCONF_dns_dnssec=false

# Enable DNS_BOGUS_PRIV. This replaces DNS_BOGUS_PRIV.
FTLCONF_dns_bogusPriv=true

# Local IPv4 binding. This replaces FTLCONF_LOCAL_IPV4 and ServerIP.
# Use this to specify the IP Pi-hole should listen on.
FTLCONF_interface_bind_to=172.19.0.3

# Local IPv6 binding. This replaces FTLCONF_LOCAL_IPV6 and ServerIPv6.
# FTLCONF_interface_bind_to=your_Pi's_ipv6_here

# Interface to listen on. This replaces the old INTERFACE variable.
FTLCONF_interface_name=eth0

# DNS listening behavior. This replaces DNSMASQ_LISTENING.
FTLCONF_dns_listen_type=local

# Web interface theme. This replaces WEBTHEME.
FTLCONF_web_theme=lcars

# --- Deprecated or Removed Variables (for reference) ---
# Old WEBPASSWORD is now FTLCONF_webserver_api_password
# Old PIHOLE_DNS is now FTLCONF_dns_upstream_servers
# Old ServerIP is now FTLCONF_interface_bind_to
# Old REV_SERVER variables are now FTLCONF_dns_revServers
# Old INTERFACE is now FTLCONF_interface_name